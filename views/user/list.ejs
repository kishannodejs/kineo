<%- include('../left_sidebar'); %>
  
  <div class="content">
    <div class="ks-nav-body-wrapper">
      <div class="container-fluid">
         <table id="ks-datatable" class="table table-striped table-bordered" width="100%">
          <thead>
           <tr>
            <th>S.No.</th>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Created At</th>   
            <th class="text-center">Actions</th>
           </tr>
          </thead>
          <tbody>
           <% if(user.length > 0) { for(var i=0; i < user.length; i++) { %>
             <tr>
              <td><%=(i+1)%></td>
              <td class="capitalize"><%=user[i].name %></td>
              <td><%=user[i].email %></td>
                <% if(user[i].role == 1) { %>
                  <td class="text-center">Admin</td>
                  <% } else if(user[i].role == 2) { %>
                  <td class="text-center">Procurement Manager</td>
                  <% } else if(user[i].role == 3) { %>
                  <td class="text-center">Inspection Manager</td>
                  <% } else if(user[i].role == 4){ %>
                  <td class="text-center">Client</td>
                  <% } %>
              
              
              </td>              
              <td><%=moment(user[i].date).format("MMM-DD-YYYY h:m A")%></td>
              <td class="text-center"><a href="/users/edit/<%=user[i]._id%>" title="Edit">Edit</a> <a href="/users/delete/<%=user[i]._id%>" title="Delete" onclick="return confirm('Are you sure to delete this record?');">Delete</a></td>
             </tr>
             <% } %>
             <tr><td colspan="6" class="text-right">
             </td></tr>
             <% } else { %>
             <tr><td colspan="6" class="text-center">No record available!</td></tr>
             <% } %>
          </tbody>
         </table>
      </div>
     </div>
  </div>

  <style>
    body {
      margin: 0;
      font-family: "Lato", sans-serif;
    }
    
    .sidebar {
      margin: 0;
      padding: 0;
      width: 200px;
      background-color: #f1f1f1;
      position: fixed;
      height: 100%;
      overflow: auto;
    }
    
    .sidebar a {
      display: block;
      color: black;
      padding: 16px;
      text-decoration: none;
    }
     
    .sidebar a.active {
      background-color: #04AA6D;
      color: white;
    }
    
    .sidebar a:hover:not(.active) {
      background-color: #555;
      color: white;
    }
    
    div.content {
      margin-left: 200px;
      padding: 1px 16px;
      height: 1000px;
    }
    
    @media screen and (max-width: 700px) {
      .sidebar {
        width: 100%;
        height: auto;
        position: relative;
      }
      .sidebar a {float: left;}
      div.content {margin-left: 0;}
    }
    
    @media screen and (max-width: 400px) {
      .sidebar a {
        text-align: center;
        float: none;
      }
    }
    </style>
