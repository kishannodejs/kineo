<%- include('../left_sidebar'); %>
  
  <div class="content">
    <form action="/users/edit/<%=user._id%>" method="POST">
                
     
        <label for="category">User Role *</label>
        <div class="form-check">
        <select name="role" class="selectpicker">
            <option>Select User Role</option>
            <option value="2" <%=user.category==2 ? 'selected':'' %>>Procurement Manager</option>
            <option value="3" <%=user.category==3 ? 'selected':'' %>>Inspection Manager</option>
            <option value="4"  <%=user.category==4 ? 'selected':'' %>>Client</option>
          </select>
        </div>

       
        <br />
        <button type="submit" class="btn btn-default">Update User Role</button>
      </form>
  </div>

  <style>
    body {
      margin: 0;
      font-family: "Lato", sans-serif;
    }
    
    .sidebar {
      margin: 0;
      padding: 0;
      width: 200px;
      background-color: #f1f1f1;
      position: fixed;
      height: 100%;
      overflow: auto;
    }
    
    .sidebar a {
      display: block;
      color: black;
      padding: 16px;
      text-decoration: none;
    }
     
    .sidebar a.active {
      background-color: #04AA6D;
      color: white;
    }
    
    .sidebar a:hover:not(.active) {
      background-color: #555;
      color: white;
    }
    
    div.content {
      margin-left: 200px;
      padding: 1px 16px;
      height: 1000px;
    }
    
    @media screen and (max-width: 700px) {
      .sidebar {
        width: 100%;
        height: auto;
        position: relative;
      }
      .sidebar a {float: left;}
      div.content {margin-left: 0;}
    }
    
    @media screen and (max-width: 400px) {
      .sidebar a {
        text-align: center;
        float: none;
      }
    }
    </style>
